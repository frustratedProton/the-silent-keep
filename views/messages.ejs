<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Messages</title>
    <link rel="stylesheet" href="/public/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <header>
        <h1>Messages</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>

    <main>
        <% if (msg && msg.length > 0) { %>
            <ul>
                <% msg.forEach(message => { %>
                    <li>
                        <h2><%= message.title %></h2>
                        <p><%= message.content %></p>
                        <p><small>Created at: <%= new Date(message.created_at).toLocaleString() %></small></p>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No messages found.</p>
        <% } %>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> My Private Club</p>
    </footer>
</body>
</html>
